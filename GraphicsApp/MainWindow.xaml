<Window x:Class="GraphicsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicsApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Width="150" Background="#EEE">
            <ComboBox x:Name="shapeComboBox" Margin="5" SelectedIndex="0"/>
            <StackPanel Margin="5">
                <TextBlock Text="Stroke Color:"/>
                <ComboBox x:Name="strokeColorComboBox" SelectedIndex="0"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Fill Color:"/>
                <ComboBox x:Name="fillColorComboBox" SelectedIndex="0"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Stroke Thickness:"/>
                <Slider x:Name="thicknessSlider" Minimum="1" Maximum="20" Value="1"/>
            </StackPanel>
			<Button x:Name = "undoButton" Content = "Undo" Margin = "5" Click = "UndoButton_Click" />
			<Button x:Name = "redoButton" Content = "Redo" Margin = "5" Click = "RedoButton_Click" />
            <Button x:Name="saveButton" Content="Save" Margin="5"/>
            <Button x:Name="loadButton" Content="Load" Margin="5"/>
            <Button x:Name="clearButton" Content="Clear" Margin="5" Click="ClearButton_Click"/>
        </StackPanel>

        <Canvas x:Name="drawingCanvas" Grid.Column="1" Background="White"
                MouseDown="DrawingCanvas_MouseDown"
                MouseMove="DrawingCanvas_MouseMove"
                MouseUp="DrawingCanvas_MouseUp"/>
    </Grid>
</Window>
